<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Selenium Project 1 Test Suite" verbose="1">

    <parameter name="browser" value="chrome"/>

    <test name="LoginTests">
        <groups>
            <run>
                <include name="login"/>
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTests"/>
        </classes>
    </test>

    <test name="CheckoutTests">
        <groups>
            <run>
                <include name="checkout"/>
            </run>
        </groups>
        <classes>
            <class name="tests.CheckoutTests"/>
        </classes>
    </test>

</suite>
